FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install uv (for running Python scripts with dependencies)
RUN curl -LsSf https://astral.sh/uv/install.sh | sh
ENV PATH="/root/.cargo/bin:${PATH}"

# Install Claude Code CLI
# Note: Adjust this based on actual installation method
RUN pip install --no-cache-dir anthropic

# Create non-root user for running workers
RUN useradd -m -u 1000 -s /bin/bash worker

# Create Claude directories
RUN mkdir -p /claude/skills /claude/config
RUN chown -R worker:worker /claude

# Set up working directory
RUN mkdir /work && chown worker:worker /work
WORKDIR /work

# Switch to non-root user
USER worker

# Default command
CMD ["bash"]
