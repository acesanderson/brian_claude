{
  "permissions": {
    "allow": [
      "mcp__captain__*",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(diff:*)",
      "Bash(stat:*)",
      "Bash(file:*)",
      "Bash(which:*)",
      "Bash(echo:*)",
      "Bash(pwd:*)"
    ]
  },
  "hooks": {
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory ~/vibe/claude-history-project python -m claude_history.hook",
            "timeout": 60,
            "async": true
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "library-specs@linkedin-plugins": true,
    "linkedin-cli-tools@linkedin-plugins": true,
    "linkedin-dev-workflow@linkedin-plugins": true,
    "linkedin-framework@linkedin-plugins": true,
    "linkedin-plugin-creator@linkedin-plugins": true,
    "mae-core@linkedin-plugins": true,
    "observe-agent@linkedin-plugins": true,
    "context7@claude-plugins-official": true,
    "superpowers@claude-plugins-official": true,
    "huggingface-skills@claude-plugins-official": true
  },
  "skipDangerousModePermissionPrompt": true,
  "mcpServers": {},
  "preferences": {
    "vimMode": true
  }
}
